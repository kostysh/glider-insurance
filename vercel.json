{
  "version": 2,
  "name": "glider-insurance",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/v1/**/*.js",
      "use": "@vercel/node"
    },
    {
        "src": "/public/**",
        "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/doc/(.*)",
      "destination": "/public/$1"
    },
    {
      "source": "/api/v1/service/ping",
      "destination": "/api/v1/service/ping.js"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/doc/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/doc",
      "destination": "/api/doc/v1"
    }
  ],
  "env": {
    "API_HOST_URL": "@api_host_url"
  }
}
