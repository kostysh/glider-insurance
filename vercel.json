{
  "version": 2,
  "name": "glider-insurance",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/v1/**/*.js",
      "use": "@vercel/node"
    },
    {
        "src": "/public/**",
        "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/doc/(.*)",
      "destination": "/public/$1"
    },
    {
      "source": "/api/v1/offers/search",
      "destination": "/api/v1/offers/search.js"
    },
    {
      "source": "/api/v1/service/ping",
      "destination": "/api/v1/service/ping.js"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/doc/",
      "destination": "/api/doc/v1"
    },
    {
      "source": "/api/doc",
      "destination": "/api/doc/v1"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo_url",
    "MONGO_DB_NAME": "@mongo_db_name",
    "DEFAULT_NETWORK": "@default_network",
    "INFURA_URI": "@infura_uri",
    "PROVIDER_EKTA_DID": "@provider_ekta_did",
    "PROVIDER_EKTA_BASE_URL": "@provider_ekta_base_url",
    "PROVIDER_EKTA_API_ID": "@provider_ekta_api_id",
    "PROVIDER_EKTA_API_PASSWORD": "@provider_ekta_api_password"
  }
}
